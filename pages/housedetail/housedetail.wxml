<!--pages/housedetail/housedetail.wxml-->
<view>
  <view style="margin-bottom:80px;">
    <swiper style="width:100%;height:220px;" indicator-dots="true" autoplay="true" interval="3000" duration="500" indicator-color="#FFFFFF" indicator-active-color="#F17403">
      <block wx:for="{{images}}" wx:for-item="item">
        <swiper-item style="width:100%;height:220px;">
          <image style="width:100%;height:100%" src="{{imageUrl + item}}" mode="aspectFill" />
        </swiper-item>
      </block>
    </swiper>
    <view style="padding-left:20px;padding-right:20px;padding-top:10px;padding-bottom:10px;">
      <text style="font-weight:bold;font-size:15px;">{{detail.address}}</text>
    </view>

    <view style="margin-left:10px;margin-right:10px;">
      <view style="background-color:#eeeeee;padding-left:10px;padding-top:6px;padding-bottom:6px;">
        <text style="font-size:15px;">公寓详情</text>
      </view>

      <view style="margin-top:10px;margin-bottom:10px;">
        <text style="font-size:13px;color:#6d6d6d;margin-left:10px;margin-right:10px;">公寓类型：{{detail.renttype}}\n</text>
        <view style="flex-direction:row;display:flex;align-items:center;">
          <text style="font-size:13px;color:#6d6d6d;margin-left:10px;margin-right:10px;" bindtap="openMap">地址：{{detail.city}} {{detail.region}} {{detail.address}}</text>
          <image style="width:15px;height:15px;" src="../images/icon_location.png" mode="aspectFill"></image>
        </view>
      </view>

      <!--公寓设施  -->
      <view style="background-color:#eeeeee;padding-left:10px;padding-top:6px;padding-bottom:6px;">
        <text style="font-size:15px;">公寓设施</text>
      </view>
      <view style="flex-direction:row;display:flex;margin-top:10px;margin-bottom:10px;" wx:for="{{installation_item_list}}" wx:for-item="item">
        <view wx:if="{{item.item0}}" style="flex-direction:column;display:flex;justify-content:center;align-items:center;width:20%;">
          <image style="width:30px;height:30px;" src="../images/icon_right.png"></image>
          <text style="font-size:10px;color:#8a8a8a;margin-top:2px;">{{item.item0}}</text>
        </view>
        <view wx:if="{{item.item1}}" style="flex-direction:column;display:flex;justify-content:center;align-items:center;width:20%;">
          <image style="width:30px;height:30px;" src="../images/icon_right.png"></image>
          <text style="font-size:10px;color:#8a8a8a;margin-top:2px;">{{item.item1}}</text>
        </view>
        <view wx:if="{{item.item2}}" style="flex-direction:column;display:flex;justify-content:center;align-items:center;width:20%;">
          <image style="width:30px;height:30px;" src="../images/icon_right.png"></image>
          <text style="font-size:10px;color:#8a8a8a;margin-top:2px;">{{item.item2}}</text>
        </view>
        <view wx:if="{{item.item3}}" style="flex-direction:column;display:flex;justify-content:center;align-items:center;width:20%;">
          <image style="width:30px;height:30px;" src="../images/icon_right.png"></image>
          <text style="font-size:10px;color:#8a8a8a;margin-top:2px;">{{item.item3}}</text>
        </view>
        <view wx:if="{{item.item4}}" style="flex-direction:column;display:flex;justify-content:center;align-items:center;width:20%;">
          <image style="width:30px;height:30px;" src="../images/icon_right.png"></image>
          <text style="font-size:10px;color:#8a8a8a;margin-top:2px;">{{item.item4}}</text>
        </view>
      </view>
      <!--公寓设施 end -->

      <!--付款方式  -->
      <view style="background-color:#eeeeee;padding-left:10px;padding-top:6px;padding-bottom:6px;">
        <text style="font-size:15px;">付款方式</text>
      </view>
      <view style="flex-direction:row;display:flex;margin-top:10px;margin-bottom:10px;">
        <view wx:if="{{detail.pay_month == 1}}" style="flex-direction:column;display:flex;justify-content:center;align-items:center;width:20%;">
          <image style="width:30px;height:30px;" src="../images/icon_right.png"></image>
          <text style="font-size:10px;color:#8a8a8a;margin-top:2px;">月付</text>
        </view>
        <view wx:if="{{detail.pay_season == 1}}" style="flex-direction:column;display:flex;justify-content:center;align-items:center;width:20%;">
          <image style="width:30px;height:30px;" src="../images/icon_right.png"></image>
          <text style="font-size:10px;color:#8a8a8a;margin-top:2px;">季付</text>
        </view>
        <view wx:if="{{detail.pay_half == 1}}" style="flex-direction:column;display:flex;justify-content:center;align-items:center;width:20%;">
          <image style="width:30px;height:30px;" src="../images/icon_right.png"></image>
          <text style="font-size:10px;color:#8a8a8a;margin-top:2px;">半年付</text>
        </view>
        <view wx:if="{{detail.pay_year == 1}}" style="flex-direction:column;display:flex;justify-content:center;align-items:center;width:20%;">
          <image style="width:30px;height:30px;" src="../images/icon_right.png"></image>
          <text style="font-size:10px;color:#8a8a8a;margin-top:2px;">年付</text>
        </view>
      </view>
      <!--付款方式 end -->

      <!--长图  -->
      <view>
        <image style="width:100%;" wx:if="{{longimage}}" src="{{imageUrl + longimage}}" mode="widthFix" />
      </view>

    </view>
  </view>

  <!--底部固定布局  -->
  <view style="position: fixed;bottom: 0;width: 100%;height:50px;display: flex;flex-direction: row; ">
    <image style="width:50%;height:100%;background-color:#E5E5E5;" src="../images/bottom_contact.jpg" mode="aspectFit"></image>
    <view style="width:50%;height:100%;background-color:#F17403;flex-direction:column;display:flex;justify-content:center;align-items:center;" bindtap="dial">
      <text style="color:white;font-size:20px;">立即预约</text>
    </view>
  </view>
</view>